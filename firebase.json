{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "hosting": [
    {
      "target": "admin",
      "public": "ownerisgodpay-admin/dist",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    },
    {
      "target": "api",
      "public": "hosting",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ]
    }
  ],
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "runtime": "nodejs24"
    },
    {
      "source": "ownerisgodpay-core",
      "codebase": "core",
      "runtime": "nodejs24"
    },
    {
      "source": "ownerisgodpay-wallet",
      "codebase": "wallet",
      "runtime": "nodejs24"
    },
    {
      "source": "ownerisgodpay-services",
      "codebase": "services",
      "runtime": "nodejs24"
    }
  ]
}